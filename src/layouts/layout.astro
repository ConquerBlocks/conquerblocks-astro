---
import { getRelativeLocaleUrl } from "astro:i18n";
import { getStaticPaths } from "../pages/en/movies/[...title].astro";
const { pageTitle } = Astro.props;

const currentLocale = Astro.currentLocale;
const aboutRoute = getRelativeLocaleUrl(currentLocale, "/about");


const allPages = getStaticPaths();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <nav>
      <ul>
        <li><a href="/es/">Home</a></li>
        <li><a href={aboutRoute}>About</a></li>
        {
          allPages.map((movie) => {
            return (
              <li>
                <a href=`/movies/${movie.params.title}`>{movie.props.pageTitle}</a>
              </li>
            );
          })
        }
      </ul>
    </nav>
    <slot />
  </body>

  <style>
    h1 {
      color: red;
    }
  </style>
</html>
